{
  "name": "glomo-boxes",
  "version": "1.0.4",
  "description": "Glomo UI modules built in react",
  "bugs": {
    "url": "https://github.com/globalmouth/glomo-boxes/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/globalmouth/glomo-boxes"
  },
  "main": "build/index.js",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "lint": "eslint lib/**; exit 0",
    "lint:watch": "esw -w lib/**",
    "test:watch": "jest --watch",
    "start": "concurrently --kill-others \"yarn run lint:watch\" \"yarn run test:watch\" \"webpack --config webpack.config.js --watch --env.dev\"",
    "test": "jest",
    "precommit": "yarn run test && yarn run lint && lint-staged",
    "prettify": "prettier --single-quote --tab-width 3 --trailing-comma es5 --write 'lib/**/*.{js,jsx,json,css}'",
    "prebuild": "yarn run test && yarn run lint && yarn run clean",
    "build": "webpack --config webpack.config.js --progress --colors --profile --env.dev",
    "postversion": "npm publish",
    "prepublishOnly": "yarn run build",
    "postpublish": "git push --follow-tags"
  },
  "lint-staged": {
    "lib/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --tab-width 3 --trailing-comma es5 --write",
      "git add"
    ]
  },
  "author": "Owain Stratton",
  "license": "MIT",
  "peerDependencies": {
    "react": "^15.0.1 || ^16.0.0",
    "react-dom": "^15.0.1 || ^16.0.0"
  },
  "dependencies": {
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "webpack": "^3.8.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^3.5.0",
    "css-loader": "^0.28.7",
    "eslint": "^4.1.1",
    "eslint-config-react-app": "^2.0.1",
    "eslint-plugin-flowtype": "^2.34.1",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "eslint-watch": "^3.1.3",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.8",
    "prettier": "^1.7.4",
    "react-test-renderer": "^16.0.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/jest/transform.js"
    }
  }
}
