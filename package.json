{
  "name": "glomo-boxes",
  "version": "1.0.0",
  "description": "Glomo UI modules built in react",
  "bugs": {
    "url": "https://github.com/globalmouth/glomo-boxes/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/globalmouth/glomo-boxes"
  },
  "main": "build/bundle.js",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "prestart": "ttab -a iTerm2 -w 'yarn test -- --watch'",
    "start": "webpack --config webpack.config.js --watch",
    "test": "jest",
    "precommit": "lint-staged && yarn run test",
    "prettify": "prettier --single-quote --tab-width 3 --trailing-comma es5 --write 'src/**/*.{js,jsx,json,css}'",
    "prebuild": "yarn run test && yarn run clean",
    "build": "webpack --config webpack.config.js --progress --colors --profile",
    "postversion": "npm publish",
    "prepublishOnly": "yarn run build",
    "postpublish": "git push --follow-tags"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --tab-width 3 --trailing-comma es5 --write",
      "git add"
    ]
  },
  "author": "Owain Stratton",
  "license": "MIT",
  "peerDependencies": {
    "react": "^15.0.1 || ^16.0.0",
    "react-dom": "^15.0.1 || ^16.0.0"
  },
  "dependencies": {
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "webpack": "^3.8.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "prettier": "^1.7.4",
    "react-test-renderer": "^16.0.0"
  }
}
