{
  "name": "glomo_boxes",
  "version": "1.0.3",
  "description": "Glomo UI modules built in react",
  "main": "dist/bundle.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "test": "jest",
    "precommit": "lint-staged",
    "prettify": "prettier --single-quote --tab-width 3 --trailing-comma es5 --write 'src/**/*.{js,jsx,json,css}'",
    "prebuild": "yarn run test && yarn run clean",
    "build": "env ENTRY=./src/index.js webpack --config webpack.config.js --env.prod --progress --colors --profile",
    "prestart": "ttab -a iTerm2 -w 'yarn test -- --watch'",
    "start": "env ENTRY=./src/app.js webpack-dev-server --config webpack.config.js --env.dev",
    "start-showcase-reel": "env ENTRY=./src/ShowcaseReel/index.js webpack-dev-server --config webpack.config.js --env.dev",
    "postversion": "npm publish",
    "prebublish": "yarn run build",
    "postpublish": "git push --follow-tags"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --tab-width 3 --trailing-comma es5 --write",
      "git add"
    ]
  },
  "author": "Owain Stratton",
  "license": "MIT",
  "devDependencies": {
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-element-to-jsx-string": "^13.0.0",
    "ttab": "^0.6.0"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "cpy-cli": "^1.0.1",
    "css-loader": "^0.28.7",
    "highlight.js": "^9.12.0",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "node-sass": "^4.5.3",
    "postcss-flexbugs-fixes": "^3.2.0",
    "postcss-loader": "^2.0.8",
    "prettier": "^1.7.4",
    "react-test-renderer": "^16.0.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3"
  }
}
